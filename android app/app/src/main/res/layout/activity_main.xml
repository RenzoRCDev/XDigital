<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Nueva barra superior violeta azulado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violet_blue"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:minHeight="56dp">

        <!-- Menú desplegable (esquina izquierda) -->
        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menú"
            android:src="@drawable/icono_menu"
            android:tint="@android:color/white" />

        <!-- Barra de búsqueda (centro) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:hint="@string/buscar_productos"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/background_card"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxStrokeWidth="0dp"
            app:startIconDrawable="@drawable/icono_buscar"
            app:startIconTint="@color/violet_blue"
            app:hintTextColor="@color/text_secondary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/campo_busqueda"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="text"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:textSize="16sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón de perfil -->
        <ImageButton
            android:id="@+id/btn_perfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Perfil"
            android:src="@drawable/icono_persona"
            android:tint="@android:color/white" />

        <!-- Carrito de compras (esquina derecha) -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp">

            <ImageButton
                android:id="@+id/btn_carrito"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Carrito"
                android:src="@drawable/icono_carrito"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/contador_carrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/fondo_circulo"
                android:padding="4dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:textStyle="bold"
                android:minWidth="16dp"
                android:minHeight="16dp"
                android:gravity="center"
                android:visibility="gone" />

        </FrameLayout>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="24dp"
            android:background="@color/background_light">

            <!-- Sección de categorías (sin título) -->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_categorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_categoria" />

            <!-- Sección de productos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/ver_todos"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/icono_estrella"
                    android:drawablePadding="8dp"
                    android:drawableTint="#412473" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_productos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="4dp"
                tools:listitem="@layout/item_producto" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>