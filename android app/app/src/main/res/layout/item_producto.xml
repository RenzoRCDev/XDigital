<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/white">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/imagen_producto"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:background="@color/design_default_color_primary_variant"
            tools:src="@drawable/ic_launcher_foreground" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/nombre_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            tools:text="iPhone 15 Pro Max" />

        <!-- Precio -->
        <TextView
            android:id="@+id/precio_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textColor="@color/design_default_color_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="S/ 1,299.99" />

        <!-- Información adicional en una fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/marca_producto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Apple" />

            <TextView
                android:id="@+id/calificacion_producto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:gravity="end"
                tools:text="★ 4.8" />

        </LinearLayout>

        <!-- Stock -->
        <TextView
            android:id="@+id/stock_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            tools:text="Stock: 15" />

        <!-- Botón de agregar al carrito -->
        <Button
            android:id="@+id/boton_agregar_carrito"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/agregar_carrito"
            android:textSize="11sp"
            app:cornerRadius="16dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>